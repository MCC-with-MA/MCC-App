<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00004F"
    tools:context=".GetStartedActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="75dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/robot_get_started" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="325dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textAlignment="center"
        android:fontFamily="@font/cornerita"
        android:text="Welcome to Mobi Agent!"
        />

    <TextView
        android:id="@+id/introTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/cornerita"
        android:text="Welcome to Mobi Agent! Welcome to Mobi Agent! Welcome to Mobi Agent! Welcome to Mobi Agent! Welcome to Mobi Agent! Welcome to Mobi Agent! Welcome to Mobi Agent!"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#00004F">

        <Button
            android:id="@+id/getStartedButton"
            android:paddingHorizontal="80dp"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00004F"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/cornerita"
            android:textAllCaps="false"
            android:text="Get Started" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>