<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#00004F"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/robot_get_started"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/robot_get_started"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_get_started"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textAlignment="center"
                android:fontFamily="@font/cornerita"
                android:text="Welcome to SwiftX!"
                />

            <TextView
                android:id="@+id/introTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcomeTextView"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/cornerita"
                android:text="Introducing SwiftX, a mobile application specifically designed to complete computationally intensive tasks of your Android device. But that's not all - SwiftX goes beyond individual device capabilities by allowing you to harness your device's idle processing power to assist nearby devices in completing intensive tasks too. Feel like getting help or contributing? Click on Get Started!"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/introTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:backgroundTint="#000080"
                app:cardCornerRadius="25dp"
                app:cardPreventCornerOverlap="true"
                >

                <Button
                    android:id="@+id/getStartedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cornerita"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="10dp"
                    android:backgroundTint="#000080"
                    android:text="Get Started"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </ScrollView>


</LinearLayout>