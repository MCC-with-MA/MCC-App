<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    app:cardCornerRadius="20dp"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            >

            <TextView
                android:id="@+id/are_you_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Your progress will be terminated. \nDo you want to Proceed?"
                android:fontFamily="@font/cornerita"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#00004F"
                />

            <ImageView
                android:id="@+id/robot_popup_img"
                android:layout_below="@+id/are_you_sure"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/robot_popup"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/robot_popup_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/yesCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#00004F">

                    <Button
                        android:id="@+id/yesbtn"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#00004F"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/cornerita"
                        android:textAllCaps="false"
                        android:text="Yes" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/noCard"
                    android:layout_toEndOf="@+id/yesCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#00004F"
                    android:layout_marginLeft="20dp">

                    <Button
                        android:id="@+id/nobtn"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00004F"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/cornerita"
                        android:textAllCaps="false"
                        android:text="No" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>